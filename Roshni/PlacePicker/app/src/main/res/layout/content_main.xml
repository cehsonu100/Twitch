<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="roshni.com.placepicker.MainActivity"
    tools:showIn="@layout/activity_main"
    android:background="#8785fb">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PlacePicker"
        android:id="@+id/placePickerButton"
        android:background="#000000"
        android:textColor="#fbfafa"
        android:onClick="pickPlace"
        android:layout_above="@+id/locationUpdateButton"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:theme="@style/Base.AlertDialog.AppCompat.Light"
        android:layout_above="@+id/placePickerButton"
        android:layout_alignLeft="@+id/placePickerButton"
        android:layout_alignStart="@+id/placePickerButton" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mLatitudeText"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:theme="@style/Base.AlertDialog.AppCompat.Light"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mLongitudeText"
        android:theme="@style/Base.AlertDialog.AppCompat.Light"
        android:layout_below="@+id/mLatitudeText"
        android:layout_alignLeft="@+id/mLatitudeText"
        android:layout_alignStart="@+id/mLatitudeText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="startUpdate"
        android:id="@+id/locationUpdateButton"
        android:onClick="startUpdatesButtonHandler"
        android:layout_marginBottom="44dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="set this as ur required place"
        android:id="@+id/setStartLatLanButton"
        android:layout_below="@+id/mLongitudeText"
        android:layout_centerHorizontal="true"
        android:onClick="setStartLatLan" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/takeRadiusText"
        android:layout_below="@+id/setStartLatLanButton"
        android:layout_alignLeft="@+id/setStartLatLanButton"
        android:layout_alignStart="@+id/setStartLatLanButton"
        android:text="input radius"
        android:inputType="numberDecimal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="setRadius"
        android:id="@+id/setRadiusButton"
        android:layout_below="@+id/setStartLatLanButton"
        android:layout_toRightOf="@+id/placePickerButton"
        android:layout_toEndOf="@+id/placePickerButton"
        android:onClick="setRadius" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/distTraveledView"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/takeRadiusText"
        android:layout_alignStart="@+id/takeRadiusText" />

</RelativeLayout>
